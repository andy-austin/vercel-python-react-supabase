{
  "buildCommand": "pnpm build",
  "outputDirectory": "apps/web/.next",
  "installCommand": "pnpm install",
  "functions": {
    "apps/api/*.py": {
      "runtime": "python3.11"
    }
  },
  "rewrites": [
    {
      "source": "/api/graphql",
      "destination": "/apps/api/index"
    },
    {
      "source": "/api/graphql/(.*)",
      "destination": "/apps/api/index"
    }
  ]
}
